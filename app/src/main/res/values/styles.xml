<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewItem">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_1sdp</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="smallButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>
